@model IEnumerable<Database_Coursework_MVC.Models.StudentAssignmentModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Student List</h1>
<h5 style="font-size: 14px; opacity: 0.2;">Click on details for assignment details.</h5>
<table class="table mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.ActionLink("Assignment Details", "StudentAssignmentDetails", new { id=item.StudentId })
            </td>
        </tr>
}
    </tbody>
</table>
