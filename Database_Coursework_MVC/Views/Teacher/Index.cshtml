@model IEnumerable<Database_Coursework_MVC.Models.TeacherModel>

@{
    ViewData["Title"] = "Index";
}

<h1 style="opacity: 0.2;font-size: 6rem;font-weight:bold">Teacher List</h1>
<table class="table mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherEmail)
                </td>
                <td>
                    <button class="btn btn-outline-primary">@Html.ActionLink("Edit", "Edit", new { id = item.TeacherId })</button> |
                    <button class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.TeacherId })</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-12 text-center">
    <a class="btn btn-outline-success" asp-action="Create">ADD</a>
</div>
