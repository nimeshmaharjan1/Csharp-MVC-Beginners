@model IEnumerable<Database_Coursework_MVC.Models.FeeModel>

@{
    ViewData["Title"] = "Index";
}

<h1 style="opacity: 0.2;font-size: 6rem;font-weight:bold;">Fee List</h1>
<table class="table mt-3">
    <thead class="thead-dark">
        <tr>
            <th>
                Fee ID
            </th>
            <th>
                Fee Name
            </th>
            <th>
                Fee Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeeAmount)
                </td>
                <td>
                    <button class="btn btn-outline-primary">@Html.ActionLink("Edit", "Edit", new { id = item.FeeId })</button>
                    <button class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.FeeId })</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="text-center">
    <a class="btn btn-outline-success" asp-action="Create">ADD</a>
</p>
