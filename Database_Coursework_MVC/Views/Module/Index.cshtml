@model IEnumerable<Database_Coursework_MVC.Models.ModuleModel>

@{
    ViewData["Title"] = "Index";
}

<h1 style="opacity: 0.2;font-size: 6rem;font-weight:bold;">Module List</h1>
<table class="table mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                Module Code
            </th>
            <th>
                Module Name
            </th>
            <th>
                Credit Hours
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditHours)
                </td>
                <td>
                    <button class="btn btn-outline-primary">@Html.ActionLink("Edit", "Edit", new { id = item.ModuleCode })</button>
                    <button class="btn btn-outline-danger">@Html.ActionLink("Delete", "Delete", new { id = item.ModuleCode })</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="text-center">
    <a class="btn btn-outline-success" asp-action="Create">ADD</a>
</p>
